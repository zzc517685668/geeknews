<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/radius_5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/like_img"
            android:layout_width="@dimen/margin_100dp"
            android:layout_height="@dimen/margin_100dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:textSize="@dimen/textSize_15dp"
                android:textColor="@color/c_black"
                android:id="@+id/like_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_63dp" />

            <TextView
                android:textColor="@color/c_gray"
                android:id="@+id/like_form"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
