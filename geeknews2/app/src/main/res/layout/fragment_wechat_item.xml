<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/radius_5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/like_img"
            android:layout_width="@dimen/margin_100dp"
            android:layout_height="@dimen/margin_100dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_100dp"
            android:orientation="vertical">

            <TextView
                android:textSize="15dp"
                android:textColor="@color/c_black"
                android:id="@+id/wechat_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_80dp" />

            <TextView
                android:textColor="@color/c_gray"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/wechat_title"
                android:id="@+id/wechat_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_alignParentRight="true"
                android:layout_below="@+id/wechat_title"
                android:id="@+id/wechat_ctime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
